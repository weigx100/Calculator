<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_past"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        android:gravity="end"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_current"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:gravity="end"
        android:paddingTop="30dp"
        android:singleLine="true"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_clc"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle3"
                    android:text="clean" />

                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle3"
                    android:text="delete" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_sin"
                    android:layout_width="47pt"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="sin" />

                <Button
                    android:id="@+id/btn_cos"
                    android:layout_width="48pt"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="cos" />

                <Button
                    android:id="@+id/btn_tan"
                    android:layout_width="47pt"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="tan" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_sqrt"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="√" />

                <Button
                    android:id="@+id/btn_square"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="X^2" />

                <Button
                    android:id="@+id/btn_cube"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="X^y"
                    android:textAllCaps="false"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="( )" />

                <Button
                    android:id="@+id/btn_pi"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="π"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_e"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="e"
                    android:textAllCaps="false"/>

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="+" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_mul"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="*" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="." />

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="=" />

                <Button
                    android:id="@+id/btn_div"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:background="@drawable/buttonstyle2"
                    android:text="/" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>